{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "g++",
        "args": ["-I", "src/include", "-L", "src/lib", "-o", "main", "${fileDirname}/*.cpp", "-lmingw32", "-lSDL2main", "-lSDL2"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      }
    ]
  }
  